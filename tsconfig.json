{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@ui": ["./src/ui"],
      "@ui/*": ["./src/ui/*"],
      "@app": ["./src/application"],
      "@app/*": ["./src/application/*"]
    }
  }
}
